{
	"name": "better-java-tests",
	"publisher": "Yuvix25",
	"displayName": "Better Java Tests",
	"description": "An easier interface for the Java Tests.",
	"version": "0.0.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/Yuvix25/better-java-tests"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:better-java-tests.createTests"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "better-java-tests.createTests",
				"title": "Create Java Tests"
			}
		],
		"configuration": {
			"title": "Better Java Tests",
			"properties": {
				"better-java-tests.useCodex": {
					"type": "boolean",
					"description": "Use Codex (AI) to automaticly generate a tester. (experimental)",
					"default": false
				},
				"better-java-tests.openAiKey": {
					"type": "string",
					"description": "OpenAI API Key",
					"default": ""
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"dependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@vscode/test-electron": "^2.1.2",
		"esbuild": "^0.14.25",
		"eslint": "^8.9.0",
		"fs-extra": "^10.0.1",
		"glob": "^7.2.0",
		"lodash": "^4.17.21",
		"mocha": "^9.2.1",
		"openai": "^2.0.4",
		"typescript": "^4.5.5",
		"java-parser": "^2.0.1"
	}
}
